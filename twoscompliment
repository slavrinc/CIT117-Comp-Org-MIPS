.data
prompt: .asciiz "Enter an integer to find the two's compliment: "
res: .asciiz "The two's compliment is: "

.text
# prompt & save integer
li $v0, 4
la $a0, prompt
syscall

li $v0, 5		# read int stored at $v0
syscall

add $t0, $v0, $zero 	# t0 = user input

li $t1, 0xffffffff	# t1 = mask containing all 1's

xor $t0, $t0, $t1	# xor 
addi $t0, $t0, 1	# add 1

# print results
li $v0, 4
la $a0, res
syscall

add $a0, $t0, $zero
li $v0, 1
syscall

end: 
li $v0, 10 	# exit syscall
syscall